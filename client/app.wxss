/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.list-item {
    height: 128rpx;
    display: flex;
    border-bottom: 2rpx solid #da7c0c;
    padding: 10rpx 10rpx 10rpx 10rpx;
}

.list-item-image {
    height: 128rpx;
    width: 140rpx;
    float: left;
}

.list-item-topic {
    line-height: 48rpx;
    font-size: 32rpx;
    color: #007AFF;
    padding-left: 12rpx;
    padding-right: 12rpx;
}

.list-item-time {
    line-height: 32rpx;
    width: 128rpx;
    font-size: 24rpx;
    float: right;
}

.page-title {
    text-align: center;
    background-color: lightblue;
    line-height: 64rpx;
    font-size: 48rpx;
    color: darkolivegreen;
}