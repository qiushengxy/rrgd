/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 


.page-title {
    text-align: center;
    background-color: lightblue;
    line-height: 64rpx;
    font-size: 48rpx;
    color: darkolivegreen;
}


.list-item {
    height: 152rpx;
    display: flex;
    border-bottom: 2rpx solid #da7c0c;
    padding: 10rpx 10rpx 10rpx 10rpx;
}

.list-item-left {
  width: 22%;
  padding-right: 20rpx;
}
.list-item-image {
  width: 100%;
  height: 100%;
}

.list-item-middle {
  width: 60%;
  padding: 25rpx 10rpx 0 0;
}

.list-item-subject {
  width: 100%;
  display: inline-block;
  font-size: 26rpx;
}

.list-item-question {
  width: 100%;
  display: inline-block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
  color: darkred;
  text-align: left;
}

.list-item-right {
  width: 18%;
  float: right;
}

.list-item-votes {
  font-size: 22rpx;
  color: red;
  padding: 30rpx 0;
}

.list-item-label {
  font-size: 20rpx;
}