<!--index.wxml-->
<view class="container">
    <!-- 用户登录测试 -->
    <view class="userinfo" bindtap="login">
        <image
            class="userinfo-avatar"
            src="{{logged ? userInfo.avatarUrl : './user-unlogin.png'}}"
            background-size="cover"
        ></image>
        <view>
            <text class="userinfo-nickname">{{logged ? userInfo.nickName : '登录中...'}}</text>
        </view>
        <view>
            <navigator class="userinfo-update" url="/pages/settings/settings">个人设置</navigator>
        </view>
    </view>

<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">头条</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">推荐</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">我的</view>  
</view>  


<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <swiper-item>  
      <view class="tunnel">
          <view class="tunnel-text uploader-text">
              <text bindtap="doRequest">UserInfo can be retrieved from Weixin:</text>
          </view>
          <view class="tunnel-text" wx:if="{{logged}}">
              <text class="request-text">{{'Gender: ' + userInfo.gender}}</text>
          </view>
          <view class="tunnel-text" wx:if="{{logged}}">
              <text class="request-text">{{'Province: ' + userInfo.province}}</text>
          </view>
      </view>
    </swiper-item>  

    <swiper-item>  
      <view>ToDo</view>  
    </swiper-item>  

    <swiper-item>  
      <view>ToDo</view>  
    </swiper-item>  
</swiper>  



</view>
