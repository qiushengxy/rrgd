<!--pages/recommend/recommend.wxml-->
<view>
  <view class="page-title">
    我的推荐
  </view>
      <scroll-view scroll-y="true" class="scroll-view" bindscrolltolower="lower">
        <block wx:for="{{list}}">
          <view class="list-item" bindtap='openTopic'>
            <image src="{{item.headpic}}" class="list-item-image"></image>
            <view class="list-item-topic">
              <text>{{item.name}}</text>
            </view>
            <view class="list-item-time">{{item.time}}</view>
          </view> 
        </block>
      </scroll-view>
</view>