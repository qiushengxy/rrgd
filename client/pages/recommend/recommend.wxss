/* pages/recommend/recommend.wxss */
.scroll-view {
    height: 100%;
}

.list-item {
    display: flex;
    height: 128rpx;
    width: 100%;
    border-bottom: 2rpx solid #da7c0c;
    padding: 10rpx 10rpx 10rpx 10rpx;
}

.list-item-image {
    height: 128rpx;
    width: 128rpx;
    display: block;
}

.list-item-topic {
    line-height: 48rpx;
    width: 70%;
    display: block;
    font-size: 32rpx;
    color: #007AFF;
}

.list-item-time {
    line-height: 48rpx;
    float: right;
    display: block;
}