.page-title {
    height: 140rpx;
    width: 100%;
    background: lightgoldenrodyellow;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    text-align: center;
}

.choices {
  align-items: left;
}

.checkbox {
  display: block;
  width: 100%;
  padding: 16rpx;
}

.category {
  width: 100%;
  background: white;
  border: 1px solid rgba(0, 0, 0, 1);
  padding-left: 64rpx;
  padding-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}